---
const title = "Betty Okwedadi";
const description =
  "PM • BA • QA • HR • Delivery — turning messy work into clear outcomes.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <style>
      :root {
        --text: #111;
        --muted: #555;
        --border: #e5e5e5;
        --bg: #fff;
        --max: 980px;
      }

      * {
        box-sizing: border-box;
      }

      html,
      body {
        margin: 0;
        padding: 0;
        background: var(--bg);
        color: var(--text);
      }

      body {
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        line-height: 1.6;
      }

      /* DEFAULT LINKS */
      a {
        color: inherit;
        text-decoration: underline;
      }

	  a.btn { text-decoration: none !important; }

      /* BUTTON LINKS (OVERRIDE DEFAULT) */
      a.btn {
        display: inline-block;
        padding: 10px 16px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: #fff;
        text-decoration: none !important;
        font-weight: 500;
      }

      a.btn.primary {
        background: #111;
        color: #fff;
        border-color: #111;
      }

      a.btn:hover {
        opacity: 0.85;
      }

      /* LAYOUT */
      .container {
        max-width: var(--max);
        margin: 0 auto;
        padding: 0 24px;
      }

      main {
        padding: 56px 0;
      }

      header {
        position: sticky;
        top: 0;
        background: rgba(255, 255, 255, 0.95);
        border-bottom: 1px solid var(--border);
      }

      nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 16px 0;
      }

      .brand {
        font-weight: 800;
        text-decoration: none;
      }

      .nav-links {
        display: flex;
        gap: 16px;
      }

      .nav-links a {
        text-decoration: none;
        padding: 6px 10px;
        border-radius: 8px;
      }

      .nav-links a:hover {
        background: #f3f3f3;
      }

      h1 {
        font-size: 44px;
        margin: 0 0 12px;
      }

      h2 {
        font-size: 26px;
        margin: 0 0 14px;
      }

      p {
        margin: 0 0 14px;
        color: var(--muted);
      }

      ul {
        padding-left: 18px;
        color: var(--muted);
      }

      li {
        margin: 8px 0;
      }

      hr {
        border: none;
        border-top: 1px solid var(--border);
        margin: 48px 0;
      }

      footer {
        border-top: 1px solid var(--border);
        padding: 24px 0;
        font-size: 14px;
        color: var(--muted);
      }
    </style>
  </head>

  <body>
    <header>
      <div class="container">
        <nav>
          <a class="brand" href="/">Betty Okwedadi</a>
          <div class="nav-links">
            <a href="/project-management">PM</a>
            <a href="/business-analysis">BA</a>
            <a href="/quality-assurance">QA</a>
            <a href="/hr-operations">HR</a>
            <a href="/#contact">Contact</a>
          </div>
        </nav>
      </div>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer>
      <div class="container">
        © {new Date().getFullYear()} Betty Okwedadi • Built with Astro
      </div>
    </footer>
  </body>
</html>
